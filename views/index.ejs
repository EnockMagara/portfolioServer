  <script>
    $(document).ready(function() {
      $('#contactForm').on('submit', function(event) {
        event.preventDefault(); // Prevent default form submission

        const $form = $(this);
        const $button = $form.find('button');
        const $buttonText = $button.find('.button-text');
        const originalButtonText = $buttonText.text();
        const $formMessage = $('#formMessage');

        // Change button text to "Please wait..."
        $buttonText.text('Please wait...');

        $.ajax({
          type: 'POST',
          url: '/send-message',
          data: $form.serialize(), // Serialize form data
          success: function(response) {
            $formMessage.text(response.message).fadeIn(); // Show success message
            $form[0].reset(); // Clear form data
            setTimeout(() => {
              $formMessage.fadeOut(); // Fade out message after 2 seconds
            }, 2000);
          },
          error: function(xhr) {
            $formMessage.text(xhr.responseJSON.message).fadeIn(); // Show error message
          },
          complete: function() {
            // Restore original button text
            $buttonText.text(originalButtonText);
          }
        });
      });
    });
  </script>

