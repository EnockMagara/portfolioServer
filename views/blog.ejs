<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog - Enock Mecheo</title>
  <meta name="description" content="Portfolio of Enock Mecheo, showcasing skills in software development, web development, and more.">
  <meta name="keywords" content="Enock Mecheo, portfolio, software development, web development, NYU Abu Dhabi, fullstack developer">
  <meta name="author" content="Enock Mecheo">
  <link href="/assets/css/style.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/styles/default.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  
  <!-- GSAP library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
  
  <!-- AOS library -->
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
</head>
<body class="portfolio-page">
  <!-- Top Navigation Bar -->
  <div class="top-navbar">
    <nav id="navbar" class="navbar">
      <ul>
        <li><a href="/" class="nav-link"><i class="bi bi-house navicon"></i>Home</a></li>
        <li><a href="/portfolio" class="nav-link"><i class="bi bi-images navicon"></i>Projects</a></li>
        <li><a href="/blog" class="nav-link active"><i class="bi bi-journal navicon"></i>Blog</a></li>
      </ul>
    </nav>
  </div>
  
  <!-- Preloader -->
  <div id="preloader"></div>
  
  <header>
    <div class="container mt-3">
      <h1>Blog</h1>
    </div>
  </header>
  <main class="main">
    <section id="blog-posts" class="container">
      <h2>Recent Posts</h2>
      <div class="row gy-4">
        <% posts.forEach(post => { %>
          <div class="col-lg-4">
            <div class="card project-card">
              <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text">
                  <%= post.snippet || 'No snippet available' %>...
                </p>
                <!-- <p class="card-text"><small class="text-muted">Published on: <%= new Date(post.pubDate).toLocaleDateString() %></small></p> -->
                <a href="<%= post.link %>" target="_blank" rel="noopener noreferrer" class="animated-button">
                  <span class="button-text">Read More</span>
                  <span class="button-line"></span>
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
  </main>
  <footer>
    <div class="container">
      <div class="social-links-footer">
        <a href="mailto:emm10042@nyu.edu" class="gmail"><i class="bi bi-envelope"></i></a>
        <a href="https://www.linkedin.com/in/enock-mecheo-56390b1a6/" class="linkedin"><i class="bi bi-linkedin"></i></a>
        <a href="https://github.com/EnockMagara" class="github"><i class="bi bi-github"></i></a>
      </div>
      <p class="copyright">
        <span>&copy; Copyright</span>
        <span class="sitename">EnockMecheo</span>
        <span>All Rights Reserved</span>
      </p>
    </div>
  </footer>
  
  <!-- Scroll Top -->
  <a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/highlight.min.js"></script>
  <script>hljs.highlightAll();</script>
  
  <!-- Main JS File -->
  <script src="/assets/js/main.js"></script>
  
  <!-- Blog page specific script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Find the preloader element
      const preloader = document.getElementById('preloader');
      
      // Function to hide preloader
      function hidePreloader() {
        if (preloader) {
          preloader.style.opacity = '0';
          setTimeout(() => {
            preloader.style.display = 'none';
          }, 300);
        }
      }
      
      // Hide preloader when content is fully loaded
      window.addEventListener('load', hidePreloader);
      
      // Fallback: Hide preloader after 5 seconds regardless, to prevent indefinite loading state
      setTimeout(hidePreloader, 5000);
    });
  </script>
</body>
</html>
