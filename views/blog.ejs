<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog - Enock Mecheo</title>
  <meta name="description" content="Portfolio of Enock Mecheo, showcasing skills in software development, web development, and more.">
  <meta name="keywords" content="Enock Mecheo, portfolio, software development, web development, NYU Abu Dhabi, fullstack developer">
  <meta name="author" content="Enock Mecheo">
  
  <!-- Space Grotesk Font -->
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <link href="/assets/css/style.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/styles/default.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  
  <!-- GSAP library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
  
  <!-- AOS library -->
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
</head>
<body class="portfolio-page">
  <!-- Navigation System -->
  <nav class="main-nav">
    <!-- Mobile Burger Menu -->
    <button class="burger-menu" id="burgerMenu">
      <span class="burger-line"></span>
      <span class="burger-line"></span>
      <span class="burger-line"></span>
    </button>
    
    <!-- Desktop Navigation -->
    <div class="desktop-nav">
      <div class="nav-container">
        <!-- Home Section -->
        <a href="/" class="nav-item">
          <div class="nav-icon">
            <i class="fas fa-home"></i>
          </div>
          <div class="nav-label">Home</div>
          <div class="nav-preview">About & Skills</div>
        </a>
        
        <!-- Portfolio Section -->
        <a href="/portfolio" class="nav-item">
          <div class="nav-icon">
            <i class="fas fa-code"></i>
          </div>
          <div class="nav-label">Projects</div>
          <div class="nav-preview">Web & Mobile Apps</div>
        </a>
        
        <!-- ML Projects Section -->
        <a href="/ml-projects" class="nav-item">
          <div class="nav-icon">
            <i class="fas fa-brain"></i>
          </div>
          <div class="nav-label">ML Projects</div>
          <div class="nav-preview">AI & Data Science</div>
        </a>
        
        <!-- Comm Lab Section -->
        <a href="/commlab" class="nav-item active">
          <div class="nav-icon">
            <i class="fas fa-microphone"></i>
          </div>
          <div class="nav-label">Comm Lab</div>
          <div class="nav-preview">Media & Design</div>
        </a>
      </div>
    </div>
    
    <!-- Mobile Navigation Overlay -->
    <div class="mobile-nav-overlay" id="mobileNavOverlay">
      <div class="mobile-nav-content">
        <div class="mobile-nav-header">
          <span class="mobile-nav-title">Navigation</span>
          <button class="mobile-nav-close" id="mobileNavClose">
            <i class="fas fa-times"></i>
          </button>
        </div>
        <div class="mobile-nav-items">
          <a href="/" class="mobile-nav-item">
            <i class="fas fa-home"></i>
            <span>Home</span>
            <small>About & Skills</small>
          </a>
          <a href="/portfolio" class="mobile-nav-item">
            <i class="fas fa-code"></i>
            <span>Projects</span>
            <small>Web & Mobile Apps</small>
          </a>
          <a href="/ml-projects" class="mobile-nav-item">
            <i class="fas fa-brain"></i>
            <span>ML Projects</span>
            <small>AI & Data Science</small>
          </a>
          <a href="/commlab" class="mobile-nav-item active">
            <i class="fas fa-microphone"></i>
            <span>Comm Lab</span>
            <small>Media & Design</small>
          </a>
        </div>
      </div>
    </div>
  </nav>
  
  <!-- Preloader -->
  <div id="preloader"></div>
  
  <header>
    <div class="container mt-3">
      <h1>Blog</h1>
    </div>
  </header>
  <main class="main">
    <section id="blog-posts" class="container">
      <h2>Recent Posts</h2>
      <div class="row gy-4">
        <% posts.forEach(post => { %>
          <div class="col-lg-4">
            <div class="card project-card">
              <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text">
                  <%= post.snippet || 'No snippet available' %>...
                </p>
                <!-- <p class="card-text"><small class="text-muted">Published on: <%= new Date(post.pubDate).toLocaleDateString() %></small></p> -->
                <a href="<%= post.link %>" target="_blank" rel="noopener noreferrer" class="animated-button">
                  <span class="button-text">Read More</span>
                  <span class="button-line"></span>
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
  </main>
  <footer>
    <div class="container">
      <div class="social-links-footer">
        <a href="mailto:enockmecheo@nyu.edu" class="gmail"><i class="bi bi-envelope"></i></a>
        <a href="https://www.linkedin.com/in/enock-mecheo-56390b1a6/" class="linkedin" target="_blank"><i class="bi bi-linkedin"></i></a>
        <a href="https://github.com/EnockMagara" class="github" target="_blank"><i class="bi bi-github"></i></a>
      </div>
      <!-- Visitor Information Section -->
      <div id="visitor-info" class="visitor-info">
        <!-- Content will be populated by JavaScript -->
      </div>
      
      <p class="thank-you-message">Thank you for your interest in my work.</p>
    </div>
  </footer>
  
  <!-- Scroll Top -->
  <a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/highlight.min.js"></script>
  <script>hljs.highlightAll();</script>
  
  <!-- Main JS File -->
  <script src="/assets/js/main.js"></script>
</body>
</html>
